{
  "name": "XenonTrade",
  "version": "0.1.0",
  "description": "Path of Exile trading app for price checking and whisper management",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "buildLinux": "electron-packager . XenonTrade --platform linux --arch x64 --out dist/ --overwrite",
    "buildWin": "electron-packager . XenonTrade --platform win32 --arch x64 --out dist/ --overwrite",
    "distLinux": "electron-installer-debian --src dist/XenonTrade-linux-x64/ --arch amd64 --config resources/dist_config/linux.json && electron-installer-redhat --src dist/XenonTrade-linux-x64/ --arch x86_64 --config resources/dist_config/linux.json"
  },
  "keywords": [
    "poe",
    "path of exile",
    "trade",
    "tool",
    "linux"
  ],
  "homepage": "https://github.com/klayveR/xenontrade#readme",
  "bugs": {
    "url": "https://github.com/klayveR/xenontrade/issues"
  },
  "author": {
    "name": "Tobias Hoffmann",
    "email": "tobiashoffmann7@gmail.com",
    "url": "http://klayver.de"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/klayveR/xenontrade.git"
  },
  "license": "MIT",
  "dependencies": {
    "clipboardy": "^1.2.3",
    "electron-squirrel-startup": "^1.0.0",
    "iohook": "^0.2.0",
    "jquery": "^3.3.1",
    "poe-ninja-api-manager": "^0.6.4",
    "promise-fs": "^1.3.0",
    "underscore": "^1.9.1"
  },
  "cmake-js": {
    "runtime": "electron",
    "runtimeVersion": "2.0.8"
  },
  "iohook": {
    "targets": [
      "node-59",
      "electron-57"
    ],
    "platforms": [
      "win32",
      "linux"
    ],
    "arches": [
      "x64",
      "ia32"
    ]
  },
  "build": {
    "appId": "de.klayver.xenontrade",
    "directories": {
      "output": "out/"
    },
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Game"
    }
  },
  "devDependencies": {
    "electron": "^2.0.8",
    "electron-installer-debian": "^0.8.1",
    "electron-winstaller": "^2.6.4"
  }
}
